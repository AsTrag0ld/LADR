<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projet.ladr">

        <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
            <activity
                android:name=".controller.MainActivity">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
            <activity
                android:name=".controller.Statistiques"
                android:theme="@style/AppTheme">
            </activity>
            <activity
                android:name=".controller.ChoixJoueurs"
                android:theme="@style/AppTheme">
            </activity>
            <activity
                android:name=".controller.NouveauJoueur"
                android:theme="@style/AppTheme">
            </activity>
            <activity
                android:name=".controller.ConsulterRegles"
                android:theme="@style/AppTheme">
            </activity>
            <activity
                android:name=".controller.InitialisationPartie"
                android:theme="@style/AppTheme">
            </activity>
            <activity
                android:name="com.projet.ladr.AndroidLauncher"
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:configChanges="keyboard|keyboardHidden|orientation|screenSize">
            </activity>
        </application>

</manifest>


